%head
	%script{:type=>"text/javascript", :src=>"js/jquery-1.11.3.min.js"}
	%script{:type=>"text/javascript", :src=>"js/main.js"}
	%script{:type=>"text/javascript", :src=>"js/bootstrap.js"}
	%script{:type=>"text/javascript", :src=>"js/codemirror.js"}
	%script{:type=>"text/javascript", :src=>"mode/ruby/ruby.js"}

	%link{:rel=>"stylesheet", :href=>"css/bootstrap.css"}
	%link{:rel=>"stylesheet", :href=>"css/common.css"}
	%link{:rel=>"stylesheet", :href=>"css/codemirror.css"}
%body
	%div{:class => "row margin-top-50"}
		%div{:class=>"form-group"}
			%textarea{:id => "code", :class => "col-md-6 form-control margin-bottom-20"}
		%div{:class=>"form-group"}
			%input{:type => "button", :value => "Run Code", :id => "submit-btn",  :class=>"btn btn-default"}

		%div{:id => "output-div", :class=>"col-md-4"}
			%label Program Output:
			%div{:id => "output", :class=>"well"}